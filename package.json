    "stylelint-scss": "^5.0.1",
    "stylelint-webpack-plugin": "^4.1.1",
    "typescript": "latest"
  },
  "dependencies": {
    "node-sass": "^9.0.0",
    "nuxt-icons": "^3.2.1",
    "nuxt-lazy-load": "^3.0.4",
