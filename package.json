    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-nuxt3-auto-import": "git+https://github.com/LuckyWindsck/eslint-plugin-nuxt3-auto-import.git",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.15.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nuxt": "^3.6.0",
    "postcss": "^8.4.24",
